statement ok
create database if not exists test_table_lock

statement ok
use test_table_lock

statement ok
create table if not exists t1(a int, b int)

statement ok
insert into t1 values(1,2),(3,4)

onlyif mysql
statement ok
truncate table system.metrics

statement error 1006
update t1 set a=2 where to_timestamp(8472945773481)

statement ok
update t1 set a=2 where b=2

query II
select * from t1 order by a
----
2 2
3 4

onlyif mysql
query B
SELECT COUNT() >= 1 FROM system.metrics where metric = 'table_lock_nums_total'
----
1

statement ok
drop table t1 all

statement ok
drop database if exists test_table_lock
