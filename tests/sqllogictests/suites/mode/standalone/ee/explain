CREATE DATABASE test_index_db

statement ok
USE test_index_db

statement ok
CREATE TABLE t1(a int,b int) Engine = Fuse

statement ok
CREATE AGGREGATING INDEX idx1 AS SELECT b, SUM(a) FROM t1 WHERE b > 3 GROUP BY b

